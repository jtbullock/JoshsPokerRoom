<h2>Welcome to Josh's Poker Room!</h2>

<h2>Upcoming Tournaments</h2>

<ul class="list-group">
  {{#each events}}
    <li class="list-group-item d-flex align-items-center">
      <div class="flex-grow-1">
        <strong>{{this.eventName}}</strong>
        <br/>{{this.eventDate}}
      </div>
      {{#if @root/isLoggedIn}}
        <a href="/register/{{this.id}}" class="btn btn-primary">
          Register
        </a>
      {{else}}
        <a href="/login" class="btn btn-primary">
          Login to Register
        </a>
      {{/if}}

    </li>
  {{/each}}
</ul>